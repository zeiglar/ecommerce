@model Demo.Core.DTOs.UIs.OInvoice

<h3>Invoice Detail</h3>


@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "Main" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    
    <div id="content">

        <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
            <li class="active"><a href="#Order" data-toggle="tab">Order</a></li>
            <li><a href="#Payment" data-toggle="tab">Payment</a></li>
            <li><a href="#History" data-toggle="tab">History</a></li>
            <li><a href="#Memo" data-toggle="tab">Memo</a></li>
            <li><a href="#Contact" data-toggle="tab">Contact</a></li>
        </ul>

        <div id="my-tab-content" class="tab-content" style="padding-top: 1em;">

            <div class="tab-pane active" id="Order">
                <div id="orderInfo">
                    <div class="row">
                        <div class="col-md-4">
                            <strong>@Html.DisplayNameFor(m => m.Invoice)</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(m => m.Invoice)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <strong>@Html.DisplayNameFor(m => m.DateCreated)</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(m => m.DateCreated)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <strong>@Html.DisplayNameFor(m => m.PriceIncGST)</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(m => m.PriceIncGST)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <strong>@Html.DisplayNameFor(m => m.AmountPaid)</strong>
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(m => m.AmountPaid)
                        </div>
                    </div>
                </div>

                <div id="orderAct" style="padding-top: 2em">
                    <div class="row">
                        <div class="col-md-2">
                            <strong>#</strong>
                        </div>
                        <div class="col-md-2">
                            <strong>Name</strong>
                        </div>
                        <div class="col-md-2">
                            <strong>PriceType</strong>
                        </div>
                        <div class="col-md-2">
                            <strong>PriceIncGST</strong>
                        </div>
                        <div class="col-md-2">
                            <strong>TotalIncGST</strong>
                        </div>
                    </div>

                    @foreach (var Shopping in Model.Shoppings)
                    {
                        <div class="row">
                            <div class="col-md-2">
                                @Shopping.ActivityId
                            </div>
                            <div class="col-md-2">
                                @Shopping.Name
                            </div>
                            <div class="col-md-2">
                                @Shopping.PriceType
                            </div>
                            <div class="col-md-2">
                                @Shopping.PriceIncGST
                            </div>
                            <div class="col-md-2">
                                @Shopping.TotalIncGST
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane" id="Payment">
                <div class="row">
                    <div class="col-md-2">
                        <strong>#</strong>
                    </div>
                    <div class="col-md-2">
                        <strong>PaymentType</strong>
                    </div>
                    <div class="col-md-2">
                        <strong>Paid</strong>
                    </div>
                    <div class="col-md-2">
                        <strong>AuthoredBy</strong>
                    </div>
                </div>
                @foreach (var Invoice in Model.Invoices)
                {
                    <div class="row">
                        <div class="col-md-2">
                            @Invoice.PaymentId
                        </div>
                        <div class="col-md-2">
                            @Invoice.PaymentType
                        </div>
                        <div class="col-md-2">
                            @Invoice.Paid
                        </div>
                        <div class="col-md-2">
                            @Invoice.AuthoredBy
                        </div>
                    </div>
                }

                <div class="row" style="padding-top:5em">
                    <div class="col-md-4 col-md-offset-4">
                        @Ajax.ActionLink("Add New Invoice", "NewInvoice", new { orderId = Model.Invoice }, new AjaxOptions { UpdateTargetId = "Main" })
                    </div>
                </div>
            </div>

            <div class="tab-pane" id="History">
                @foreach (var step in Model.OrderSteps)
                {
                    <div class="row">
                        <div class="col-md-2">
                            @step.OrderHistoryId
                        </div>
                        <div class="col-md-8">
                            @step.Record
                        </div>
                        <div class="col-md-2">
                            @step.DateCreated
                        </div>
                    </div>
                }
            </div>

            <div class="tab-pane" id="Memo">
                <div class="col-md-8">
                    @Html.TextAreaFor(m => m.Memo, 10, 150, null)
                </div>
            </div>

            <div class="tab-pane" id="Contact">

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.Title)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Title)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.FirstName)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.FirstName)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.LastName)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.LastName)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.Address)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Address)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.Suburb)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Suburb)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.PostCode)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.PostCode)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.Mobile)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Mobile)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.HomePone)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.HomePone)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.WorkPhone)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.WorkPhone)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <strong>@Html.DisplayNameFor(m => m.Email)</strong>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(m => m.Email)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            @Ajax.ActionLink("Back to List", "Invoices", new AjaxOptions { UpdateTargetId = "Main" }) | 
            <input id="button_save" type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
    
}