@model Demo.Core.DTOs.UIs.OClient

@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "Main" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    <h3>@ViewBag.Action</h3>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.Title)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.Title)
        </div>
    </div>

    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.FirstName)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.FirstName)
        </div>
    </div>

    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.LastName)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.LastName)
        </div>
    </div>

    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.Address)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.Address)
        </div>
    </div>

    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.Suburb)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.Suburb)
        </div>
    </div>

    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.PostCode)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.PostCode)
        </div>
    </div>

    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.Mobile)</strong>
        </div>
