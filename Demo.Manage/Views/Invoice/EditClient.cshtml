    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.WorkPhone)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.WorkPhone)
        </div>
    </div>

    <div class="row" style="padding-top: 0.2em;">
        <div class="col-md-4">
            <strong>@Html.LabelFor(m => m.Email)</strong>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(m => m.Email)
        </div>
    </div>

    <hr />
    
    <div class="col-md-4 col-md-offset-8" style="text-align: center; clear: both; padding: 10px;">
        @Ajax.ActionLink("Back", "ShowInvoice", "Invoice", new { id = @ViewBag.OrderId }, new AjaxOptions() { UpdateTargetId = "Main" }, new { @class = "btn btn-default" }) | 
        <input id="button_save" type="submit" class="btn btn-default" value="Save" />
    </div>
